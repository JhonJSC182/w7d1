<h1>Edit Cat!!!!!!!!</h1>


<form action="<%=cats_url()%>" method="post">
<input type="hidden" name="_method" value="PATCH">
     

    <label for="name">Name</label>
    <input id="name" type="text" name="cat[name]" value="<%=@cat.name%>">

    <p>Select Sex</p>
    <input type="radio" name="cat[sex]" id="M" value="M">
    <label for="M">Male</label>
    <input type="radio" name="cat[sex]" id="F" value="F">
    <label for="F">Female</label>


    <select name="cat[color]" id="">
    <% CAT_COLORS.each do |color| %>
    <option value="<%=color%>"><%=color%></option>
    <% end %>
    </select>

    <label for="date">Birth Date</label>
    <input type="date" name="cat[birth_date]" id="date">

    <label for="description">Description</label>
    <textarea name="cat[description]" id="description"></textarea>

    <input type="submit" value="submit cat">

</form>